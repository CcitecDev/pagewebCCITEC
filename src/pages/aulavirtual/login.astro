---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Login | Aula Virtual CCITEC">
    <div class="flex flex-col justify-center w-full items-center orientate-l" data-astro-cid-ytsmujrv>
        <section class="w-9/12 sm:w-2/5 lg:w-1/3 px-4 py-4 md:px-4 md:py-6 lg:px-6 lg:py-8 bg-slate-100 rounded-xl shadow-md h-fit" data-astro-cid-ytsmujrv>
            <a class="absolute top-0 left-2 ml-4 mt-4 text-gray-600 hover:text-gray-900" href="/" aria-label="Volver" data-astro-cid-ytsmujrv>
                <img src="/icon.svg" alt="Icono de retroceso" class="h-14 md:h-10" data-astro-cid-ytsmujrv>
            </a>
            <header class="mb-3" data-astro-cid-ytsmujrv>
                <div class="border-b border-stone-300 mb-4 pb-5" data-astro-cid-ytsmujrv>
                    <h2 class="text-lg font-bold text-center text-blue-950" data-astro-cid-ytsmujrv>Iniciar sesión</h2>
                </div>
            </header>
            <form class="flex flex-col space-y-4 py-4 px-2" aria-label="Formulario de inicio de sesión" method="post" id="login-form" data-astro-cid-ytsmujrv>
                <div class="mb-2" data-astro-cid-ytsmujrv>
                    <label for="username" class="block border-slate-500 border-2 w-full px-2 py-3 relative box-border rounded-md" data-astro-cid-ytsmujrv>
                        <span class="text-slate-500 text-sm lg:text-base absolute top-3 left-3" data-astro-cid-ytsmujrv>Usuario o Correo Electrónico</span>
                        <input type="text" id="username" name="username" class="block w-full border-none bg-none outline-none text-sm lg:text-base" required data-astro-cid-ytsmujrv>
                    </label>
                </div>
                <div data-astro-cid-ytsmujrv>
                    <label for="password" class="block border-slate-500 border-2 w-full px-2 py-3 relative box-border rounded-md" data-astro-cid-ytsmujrv>
                        <span class="text-slate-500 text-sm lg:text-base absolute top-3 left-3" data-astro-cid-ytsmujrv>Contraseña</span>
                        <input type="password" id="password" name="password" class="block w-full border-none bg-none outline-none text-sm lg:text-base" required data-astro-cid-ytsmujrv>
                    </label>
                    <a href="#" class="text-xs md:text-sm text-slate-500" data-astro-cid-ytsmujrv>¿No recuerdas tu contraseña?</a>
                </div>
                <div class="flex items-center" data-astro-cid-ytsmujrv>
                    <input class="mr-2" type="checkbox" id="remember" name="remember" checked data-astro-cid-ytsmujrv>
                    <label for="remember" class="text-blue-950 text-xs md:text-sm" data-astro-cid-ytsmujrv>Recordarme</label>
                </div>
                <div class="flex flex-row justify-around" data-astro-cid-ytsmujrv>
                    <button class="bg-blue-900 hover:bg-blue-950 text-white font-bold py-2 px-4 rounded-lg m-auto w-2/5 text-sm sm:text-base" type="submit" id="btn_login" name="login" disabled data-astro-cid-ytsmujrv>Iniciar</button>
                    <a class="border border-blue-900 hover:underline text-center text-blue-900 py-2 px-4 rounded-lg m-auto w-2/5 text-sm sm:text-base" href="#" data-astro-cid-ytsmujrv>Inscríbete</a>
                </div>
            </form>
        </section>
        <section class="w-9/12 sm:w-2/5 lg:w-1/3 my-0 mx-auto text-center" data-astro-cid-ytsmujrv>
            <p class="text-xs sm:text-sm text-white mt-4 font-bold text-pretty" data-astro-cid-ytsmujrv>
                ¿Necesitas ayuda? <a class="text-slate-100 hover:underline" href="https://api.whatsapp.com/send?phone=51955440370" target="_blank" data-astro-cid-ytsmujrv>Contactar con soporte técnico</a>
            </p>
        </section>
        <style>
            [data-astro-cid-ytsmujrv] {
                transition: .25s
            }

            @media (orientation: landscape) {
                .orientate-l[data-astro-cid-ytsmujrv] {
                    background:linear-gradient(315deg,#2d9cdb 3%,#173a8a 44% 85%);
                    min-height: 100vh
                }

                @media (max-height: 600px) {
                    .orientate-l[data-astro-cid-ytsmujrv] {
                        padding-top:20vh;
                        padding-bottom: 20vh
                    }
                }
            }

            @media (orientation: portrait) {
                .orientate-l[data-astro-cid-ytsmujrv] {
                    background:linear-gradient(315deg,#2d9cdb 3%,#173a8a 44% 85%);
                    height: 100vh
                }
            }

            h2[data-astro-cid-ytsmujrv] {
                font-family: Fira Sans
            }

            input[data-astro-cid-ytsmujrv],label[data-astro-cid-ytsmujrv],button[data-astro-cid-ytsmujrv] {
                font-family: Nunito
            }

            input[data-astro-cid-ytsmujrv][type=checkbox] {
                -webkit-appearance: none;
                -moz-appearance: none;
                appearance: none;
                border: 2px solid silver;
                background-color: #fff;
                border-radius: 50%;
                height: 18px;
                width: 18px
            }

            input[data-astro-cid-ytsmujrv][type=checkbox]:checked {
                background-color: #1e3a87;
                background-image: url("data:image/svg+xml,%3csvg viewBox='0 0 16 16' fill='white' xmlns='http://www.w3.org/2000/svg'%3e%3cpath d='M12.207 4.793a1 1 0 010 1.414l-5 5a1 1 0 01-1.414 0l-2-2a1 1 0 011.414-1.414L6.5 9.086l4.293-4.293a1 1 0 011.414 0z'/%3e%3c/svg%3e")
            }

            label[data-astro-cid-ytsmujrv] input[data-astro-cid-ytsmujrv] {
                background: none
            }

            label[data-astro-cid-ytsmujrv].focus {
                border-color: #007cd2
            }

            label[data-astro-cid-ytsmujrv] span[data-astro-cid-ytsmujrv].focus {
                color: #007cd2
            }

            label[data-astro-cid-ytsmujrv] span[data-astro-cid-ytsmujrv].top {
                left: 2px;
                top: -10px;
                font-size: 12px;
                background-color: #f1f5f9;
                padding: 0 5px
            }

            #btn_login[data-astro-cid-ytsmujrv]:disabled {
                background-color: silver
            }

            /* Estilo básico del contenedor del input */
.input-container {
  position: relative;
  margin-bottom: 1rem;
}

/* Estilo del label */
.input-container label {
  position: absolute;
  top: 1rem;
  left: 0.75rem;
  font-size: 0.875rem;
  color: #6b7280;
  transition: all 0.3s ease;
  pointer-events: none; /* Para que el texto no interfiera con el input */
}

/* Estilo del input */
.input-container input {
  width: 100%;
  padding: 1.25rem 0.75rem 0.5rem;
  border: 2px solid #e5e7eb;
  border-radius: 0.375rem;
  outline: none;
  background: none;
  font-size: 1rem;
}

/* Efecto cuando el input tiene foco o tiene contenido */
.input-container input:focus + label,
.input-container input:not(:placeholder-shown) + label {
  top: -0.5rem;
  left: 0.75rem;
  font-size: 0.75rem;
  color: #2563eb; /* Color del texto del label cuando está activo */
}

        </style>
</Layout>    