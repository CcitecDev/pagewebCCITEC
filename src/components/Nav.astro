    function toggleMenu() {
        const menu = document.getElementById("menu");
        if (menu) {
            if (menu.classList.contains("hidden")) {
                menu.classList.remove("hidden", "desanimado");
                menu.classList.add("flex", "animado");
            } else {
                menu.classList.remove("animado");
