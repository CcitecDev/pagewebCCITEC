---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="generator" content="Astro v4.10.1">
        <meta name="description" content="CCITEC Ingeniería y Tecnología ofrece capacitación en línea especializada en ingeniería eléctrica. Mejora tus habilidades con nuestros cursos innovadores y profesionales experimentados.">
        <meta name="keywords" content="ingeniería, capacitación, cursos en línea, tecnología, ingeniería eléctrica">
        <meta name="author" content="CCITEC Ingeniería">
        <meta name="publisher" content="CCITEC Ingeniería y Tecnología">
        <meta name="robots" content="index, follow">
