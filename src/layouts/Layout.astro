        <meta property="og:image" content="/ogimage.jpg">
        <meta property="og:url" content="https://ccitecingenieria.web.app/">
        <meta property="og:type" content="website">
        <meta property="og:site_name" content="CCITEC Ingeniería y Tecnología">
        <!-- Canonical URL -->
        <link rel="canonical" href="https://ccitecingenieria.web.app/">
        <!-- Favicon -->
        <link rel="icon" type="image/svg+xml" href="/favicon.svg">
        <!-- Title -->
        <title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
